<div class="d-flex flex-column justify-content-center align-items-center">
  
  <br>
  <div class="input-group mb-3" style="width: 900px">
    <%= render @flight %>
  </div>
  
  <div>
    <%= form_with model: @booking, method: :post, class: "d-flex flex-column justify-content-center align-items-center" do |f| %>
      <% @booking.passengers.each do |passenger| %>
        <div>
          <%= f.fields_for :passengers, passenger do |p| %>
            <div class="input-group mb-3">
              <span class="input-group-text">Passenger</span>
              <%= p.text_field :name, class: "form-control w-45", placeholder: "Full Name" %>
              <%= p.email_field :email, class: "form-control w-45", placeholder: "Email" %>
            </div>
  
          <% end %>
        </div>
      <% end %>
      <%= f.hidden_field :flight_id, value: @flight.id %>
      <%= f.submit "Book Flight", class: "btn btn-outline-success m-2 mt-0"%>
    <% end %>
  </div>
</div>
